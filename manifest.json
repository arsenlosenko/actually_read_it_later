{
  "name": "Actually Read it Later",
  "description": "Extension for saving articles for later, and actually reading them",
  "version": "1.0",
  "manifest_version": 2,
  "permissions": ["alarms", "notifications", "storage", "tabs"],
  "background": {
    "scripts": ["js/background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Read Your article Event",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "img/drink_water16.png",
    "32": "img/drink_water32.png",
    "48": "img/drink_water48.png",
    "128": "img/drink_water128.png"
  }
}
